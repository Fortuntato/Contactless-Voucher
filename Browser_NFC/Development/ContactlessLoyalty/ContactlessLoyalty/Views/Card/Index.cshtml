@model IEnumerable<ContactlessLoyalty.Data.LoyaltyCard>

@{
    ViewData["Title"] = "Index";
    Layout = "/Views/Shared/_Layout.cshtml";
}

<h2>Index</h2>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.UserID)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.LastStampDateTime)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.TotalNumVoucherCollected)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.NumOfStamps)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.UserID)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.LastStampDateTime)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.TotalNumVoucherCollected)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.NumOfStamps)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.CardID">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.CardID">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.CardID">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
