@model ContactlessLoyalty.Data.Dashboard

@{
    ViewData["Title"] = "Edit";
    Layout = "/Views/Shared/_Layout.cshtml";
}

<h2>Edit</h2>

<h4>Dashboard</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="NumberOfStamps" class="control-label"></label>
                <input asp-for="NumberOfStamps" class="form-control" id="jsonData" />
                <span asp-validation-for="NumberOfStamps" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="LastStampDateTime" class="control-label"></label>
                <input asp-for="LastStampDateTime" class="form-control" />
                <span asp-validation-for="LastStampDateTime" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Price" class="control-label"></label>
                <input asp-for="Price" class="form-control" />
                <span asp-validation-for="Price" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="NumberOfVouchers" class="control-label"></label>
                <input asp-for="NumberOfVouchers" class="form-control" />
                <span asp-validation-for="NumberOfVouchers" class="text-danger"></span>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-default" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
